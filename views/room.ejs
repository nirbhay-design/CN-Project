<!DOCTYPE html>
<html lang="en">
<head>
    <%-  include('basetemplate.ejs') %>
    <title>Zoom clone</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/5c6aa1f215.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
</head>
<body>
    <!-- <h1>Hey we are making some cool stuff with node js</h1> -->
    
    <div class="main">
        <div class="main__left">
            <div class="main__videos">
                <div id="video-grid">

                </div>            
            </div>
            <div class="main__controls">
                <div class="main__controls__block">
                    <div onclick="muteUnmute()" class="main__controls__button main__mute__button">
                        <i class="fa fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div onclick="playStop()" class="main__controls__button main__video__button">
                        <i class="fa fa-video-camera"></i>
                        <span>Video</span>
                    </div>
                    <div onclick = "move_to_home()" class="main__controls__button">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                        <span style="color:red"">Leave</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <h5>In Call Messages</h5>
                <h3 class="chat__header">Messages can only be seen till meeting and removed when the call disconnects</h3>
            </div>
            <div class="main__chat_window">
                <div class="messages">

                </div>
            </div>
            <div class="main__message_container">
                <input id="chat_message" type="text" placeholder="Enter Message" />
            </div>
        </div>
    </div>

    <script src="script.js"> </script>

</body>
</html>
